#!/usr/bin/env ruby
# encoding: UTF-8

# Find myself
require "pathname"
bin_file = Pathname.new(__FILE__).realpath

# Find everything else
src_dir = bin_file.to_s.chomp("/bin/dino") + "/src"
lib_dir = bin_file.to_s.chomp("/bin/dino") + "/lib"
cli_dir = bin_file.to_s.chomp("/bin/dino") + "/lib/dino_cli"
working_dir = Dir.pwd

# Make sure dino is in the load path
$:.unshift lib_dir

# Start the CLI
require "dino_cli"
DinoCLI.start working_dir: working_dir,
              src_dir: src_dir,
              cli_dir: cli_dir,
              args: ARGV
